<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person Name"
        android:id="@+id/list_row_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textColor="@color/green"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/list_verify_button"
        android:gravity="center_vertical|center_horizontal"
        android:layout_toStartOf="@+id/list_verify_button"
        android:layout_toLeftOf="@+id/list_verify_button" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Verify"
        android:id="@+id/list_verify_button"
        android:textColor="#ffffffff"
        android:background="@drawable/submitbutton_drawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Alert Text"
        android:id="@+id/alertText"
        android:layout_below="@+id/list_row_name"
        android:gravity="left"
        android:textSize="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/list_verify_button"
        android:layout_toStartOf="@+id/list_verify_button" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:text="Verified: "
        android:id="@+id/list_verified_count"
        android:layout_alignBottom="@+id/alertText"
        android:textColor="@color/green"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="10dp"
        android:layout_below="@+id/list_row_name" />


</RelativeLayout>